<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inpt.jibmaak">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".activities.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JibMaak"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.UpdateOfferActivity" />
        <activity android:name=".activities.ManageOffersActivity" />
        <activity android:name=".activities.ManageAccountActivity" />
        <activity android:name=".activities.SubmitOfferActivity" />
        <activity android:name=".activities.SearchOfferResultActivity" />
        <activity android:name=".activities.SearchOfferActivity" />
        <activity android:name=".activities.MenuActivity" />
        <activity android:name=".activities.RegisterActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>